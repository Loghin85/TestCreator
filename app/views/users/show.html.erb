<p id="notice"><%= notice %>	</div>
		</div>
<div class="row" style="width: 100%; padding: 10px;">
	<div class="col-6">
		<div class="col-12" style="text-align: center;">
			<%if admin?%>
				<h1>User No. <%=@user.id%></h1>
			<%else%>
				<h1>Hi, <%=@user.Fname%>!</h1>
			<%end%>
		</div>
		<div class="row">
			<div class="col-6" style="text-align: right;">
				<strong>First name:</strong>
			</div>
			<div class="col-6">
				<%= @user.Fname %>
			</div>
		</div>

		<div class="row">
			<div class="col-6" style="text-align: right;">
				<strong>Last name:</strong>
			</div>
			<div class="col-6">
				<%= @user.Lname %>
			</div>
		</div>
		<%if admin?%>
		<div class="row">
			<div class="col-6" style="text-align: right;">
				<strong>Privilege:</strong>
			</div>
			<div class="col-6">
				<%= @user.Privilege %>
			</div>
		</div>
		<%end%>
		<div class="row">
			<div class="col-6" style="text-align: right;">
				<strong>Email:</strong>
			</div>
			<div class="col-6">
				<%= @user.Email %>
			</div>
		</div>
		<div class="row">
			<div class="col-6" style="text-align: right;">
				<strong>Member since:</strong>
			</div>
			<div class="col-6">
				<%= @user.created_at %>
			</div>
		</div>
		<br>
		<div class="row justify-content-center">
			<%= button_to 'Edit', edit_user_path(@user), class: "btn btn-primary", method: "get", style: "margin-left: 10px; margin-top: 10px;"%>
			<%= button_to 'Delete', user_path, class: "btn btn-primary", method: "delete", data: { confirm: 'Are you sure?' }, style: "margin-left: 10px; margin-top: 10px;"%>
		</div>
	</div>
	<div class="col-6">
		<div id="container" class=" " style="width: 100%; height: 400px; float: right; margin: 0 auto"></div>
	</div>
</div>