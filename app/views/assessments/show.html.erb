<p id="notice"><%= notice %>	</div>
		</div>
<div class="row" style="width: 100%; padding: 10px;">
	<div class="col-1">
	</div>
	<div class="col-10">
		<h1><%= @assessment.Name %></h1>
	</div>
	<div class="col-1">
	</div>
</div>
<div class="row" style="width: 100%; padding: 10px;">
	<div class="col-1">
	</div>
	<div class="col-10">
		<h3>Details</h3>
	</div>
	<div class="col-1">
	</div>
	<div class="col-1"></div>
	<div class="col-10">
		<div class="row">
			<div class="col-3" style="text-align: right;">
				<strong>Description:</strong>
			</div>
			<div class="col-9">
				<%= @assessment.Description.html_safe %>
			</div>
		</div>
		
		<div class="row">
			<div class="col-3" style="text-align: right;">
				<strong>Duration:</strong>
			</div>
			<div class="col-9">
				<%= @assessment.Duration %> minutes
			</div>
		</div>
		
		<div class="row">
			<div class="col-3" style="text-align: right;">
				<strong>Available from:</strong>
			</div>
			<div class="col-9">
				<%=@assessment.BeginAt.day %>/<%=@assessment.BeginAt.month %>/<%=@assessment.BeginAt.year %> <%=@assessment.BeginAt.hour %>:<%=@assessment.BeginAt.min %>
			</div>
		</div>
		
		<div class="row">
			<div class="col-3" style="text-align: right;">
				<strong>Available until:</strong>
			</div>
			<div class="col-9">
				<%=@assessment.EndAt.day %>/<%=@assessment.EndAt.month %>/<%=@assessment.EndAt.year %> <%=@assessment.EndAt.hour %>:<%=@assessment.EndAt.min %>
			</div>
		</div>
	</div>
	<div class="col-1">
	</div>
</div>
<div class="row" style="width: 100%; padding: 10px;">

	<div class="col-1">
	</div>
	<div class="col-10">
		<h3>Questions</h3>
	</div>
	<div class="col-1">
	</div>
	<div class="col-1"></div>
	<div class="col-10">
		<table class="table table-striped">
			<thead>
				<tr>
					<th scope="col">Title</th>
					<th scope="col">Type</th>
					<th scope="col">Points</th>
					<th scope="col" style="width: 85px"></th>
				</tr>
			</thead>
			<tbody>
			<%@questions.each do |question| %>
				<tr>
					<td><%= question.Title%></td>
					<td><%= question.Type%></td>
					<td><%= question.Points%></td>
					<td style="text-align: right">
						<%= link_to edit_question_path(question, :assessment_id => @assessment.id) do %>
							<i class="fas fa-pencil-alt"></i>
						<% end %>
						<%= link_to question do %>
							<i class="far fa-eye"></i>
						<% end %>
						<%= link_to question, method: :delete, data: { confirm: 'Are you sure?' }  do %>
							<i class="fas fa-trash"></i>
						<% end %>
					</td>
				</tr>
			<% end %>
			</tbody>
		</table>
		<%= button_to 'Add question', new_question_path, params: {:assessment_id => @assessment.id}, class: "btn btn-primary", method: "get", style: "margin-left: 10px; margin-top: 10px;"%>
	</div>
	<div class="col-1"></div>
</div>
<div class="row" style="width: 100%; padding: 10px;">
	<div class="col-1"></div>
	<div class="col-10">
		<br>
		<div class="row">
			<%= button_to 'Edit Assessment details', edit_assessment_path(@assessment), class: "btn btn-primary", method: "get", style: "margin-left: 25px; margin-top: 10px;"%>
			<%= button_to 'Delete Assessment', assessment_path, class: "btn btn-primary", method: "delete", data: { confirm: 'Are you sure?' }, style: "margin-left: 10px; margin-top: 10px;"%>
		</div>
	</div>
	<div class="col-1"></div>
</div>
