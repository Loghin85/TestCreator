<p id="notice"><%= notice %></p>

<h1>Assessments</h1>

<table>
  <thead>
    <tr>
      <th>Userid</th>
      <th>Name</th>
      <th>Description</th>
      <th>Duration</th>
      <th>Available from</th>
      <th>Available until</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assessments.each do |assessment| %>
      <tr>
        <td><%= assessment.user_id %></td>
        <td><%= assessment.Name %></td>
        <td><%= assessment.Description %></td>
        <td><%= assessment.Duration %></td>
        <td><%= assessment.BeginAt %></td>
        <td><%= assessment.EndAt %></td>
        <td><%= link_to 'Show', assessment %></td>
        <td><%= link_to 'Edit', edit_assessment_path(assessment) %></td>
        <td><%= link_to 'Destroy', assessment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

